<div class="mb-8 flex flex-col gap-y-4 md:flex-row md:gap-x-8">
  <div class="w-full md:w-96">
    <label for="player-search" class="block text-sm font-bold text-gray-700">Player</label>
    <div class="mt-1 relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="none" stroke-width="2" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <input type="search" name="player-search" id="player-search" class="bg-slate-100 focus:ring-emerald-700 focus:border-emerald-700 block w-full pl-10 sm:text-sm border-gray-300 rounded-md" placeholder="Auston Matthews">
    </div>
  </div>

  <div class="w-full md:w-96">
    <label for="player-search" class="block text-sm font-bold text-gray-700">Player</label>
    <div class="mt-1 relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="none" stroke-width="2" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <input type="search" name="player-search" id="player-search" class="bg-slate-100 focus:ring-emerald-700 focus:border-emerald-700 block w-full pl-10 sm:text-sm border-gray-300 rounded-md" placeholder="Auston Matthews">
    </div>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-3 gap-4">
  <% @records.each do |highlight| %>
    <div>
      <video controls class="border rounded-lg">
        <source src=<%= highlight.default_playback["url"] %> type="video/mp4">
      </video>
      <div class="text-xs mt-1 font-semibold flex items-center">
        <span class="inline-block mr-1"><img height="32px" width="32px" src=<%= highlight.team.logo_url %> alt=""></span>
        <span class="inline-block mt-1"><%= highlight.player.full_name %> (<%= format_position(highlight.player.position) %>)</span>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%== pagy_nav(@pagy) %>
</div>
